{
  "name": "opencode-codebase-index",
  "version": "0.1.7",
  "description": "Semantic codebase indexing and search for OpenCode - find code by meaning, not just keywords",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "license": "MIT",
  "author": "Kenneth",
  "repository": {
    "type": "git",
    "url": "https://github.com/Helweg/opencode-codebase-index"
  },
  "keywords": [
    "opencode",
    "semantic-search",
    "codebase-indexing",
    "vector-search",
    "embeddings",
    "tree-sitter",
    "ai-coding"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:native",
    "build:ts": "tsup",
    "build:native": "cd native && cargo build --release && napi build --release --platform",
    "build:native:all": "cd native && napi build --release --platform --target x86_64-apple-darwin --target aarch64-apple-darwin --target x86_64-unknown-linux-gnu --target aarch64-unknown-linux-gnu --target x86_64-pc-windows-msvc",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "native/*.node",
    "skill",
    "commands"
  ],
  "napi": {
    "binaryName": "codebase-index-native",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu",
      "x86_64-pc-windows-msvc"
    ]
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "ignore": "^7.0.5",
    "p-queue": "^9.1.0",
    "p-retry": "^7.1.1",
    "tiktoken": "^1.0.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@napi-rs/cli": "^3.5.1",
    "@opencode-ai/plugin": "^1.1.21",
    "@types/node": "^25.0.8",
    "eslint": "^9.0.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17",
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0.0"
  }
}
